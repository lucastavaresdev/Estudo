<!DOCTYPE html>
<html lang="pt-br">

<head>
	<meta charset="utf-8" />

	<title>Formulario de cadastro de Noticia</title>
</head>

<body>

	<h1>Adicionar noticia</h1>
	<br>
	<% if(validacao) { %>
		<ul>
			<% for (var i = 0; i < validacao.length;i++){%>
				<li>
					<%= validacao[i].msg %>
				</li>
				<% } %>
		</ul>
	<% } %>

			<form action="/noticias/salvar" method="post">
				<label>Titulo</label>
				<input type="text" name="titulo" id="titulo" value="<%=noticia.titulo%>" placeholder="Titulo da Noticia">
				<br>
				<br>
				<label>Resumo</label>
				<input type="text" name="resumo" id="resumo" value="<%=noticia.resumo%>" placeholder="Resumo da Noticia">
				<br>
				<label>Nome do Autor</label>
				<input type="text" name="autor" id="autor"  value="<%=noticia.autor%>" placeholder="Autor da noticia">
				<br>
				<label>Data da noticia</label>
				<input type="date" name="data_noticia" id="data_noticia" value="<%=noticia.data_noticia%>" placeholder="Data da Noticia">
				<br>
				<br>
				<label>Noticia</label>
				<textarea name="noticia" id="noticia" cols="30" rows="05"><%=noticia.noticia%></textarea>
				<input type="submit" value="Enviar">
			</form>
</body>

</html>